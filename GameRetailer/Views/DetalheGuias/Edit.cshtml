@model GameRetailer.Models.DetalheGuia

@{
    ViewBag.Title = "Detalhes da Guia";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Detalhe da Guia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NumDGuia)

        <div class="form-group">
            @Html.LabelFor(model => model.CodBarras, "Código de Barras", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CodBarras", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodBarras, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumGuia, "Nº de Guia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NumGuia", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NumGuia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    <div>
        <button class="btn btn-default" type="button" onclick="location.href='@Url.Action("Index")'">Voltar</button>

    </div>
