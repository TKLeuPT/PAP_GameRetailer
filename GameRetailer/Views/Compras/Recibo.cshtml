@model GameRetailer.Models.Compra
@{
    ViewBag.Title = "Recibo";
}

@*<h2>Buy</h2>*@
<section class="invoice">
    <!-- title row -->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <b>Game</b>Retailer
                <small class="pull-right">Data:@DateTime.Now.Date.ToShortDateString()</small>
            </h2>
        </div>
        <!-- /.col -->
    </div>
    <!-- info row -->
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            Revendedor:
            <br />
            <address>
                <strong>@Html.DisplayFor(model => model.Jogo.Armazem.Nome)</strong><br>
                @Html.DisplayFor(model => model.Jogo.Armazem.Morada)<br>
                @Html.DisplayFor(model => model.Jogo.Armazem.Localidade)<br>
                @Html.DisplayFor(model => model.Jogo.Armazem.CodPostal)<br>
                @*@Html.Label(" ", new { id = "remetente", @style = "text-transform: uppercase;" })<br>
                    @Html.Label(" ", new { id = "moradaRe", @style = "text-transform: uppercase;" })<br>
                    @Html.Label(" ", new { id = "localidadeRe", @style = "text-transform: uppercase;" })<br>
                    @Html.Label(" ", new { id = "codpostalRe", @style = "text-transform: uppercase;" })<br>*@
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            Cliente:
            <br />
            <address>
                <strong>@User.Identity.Name</strong><br>
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            <b>
                Recibo nº @Html.DisplayFor(model => model.NumCompra)<br>
            </b><br>
            @*<br>
            <b>Order ID:</b> 4F3S8J<br>
            <b>Payment Due:</b> 2/22/2014<br>
            <b>Account:</b> 968-34567*@
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Quantidade</th>
                        <th>Produto</th>

                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        <td>@Html.DisplayFor(model => model.Quantidade)</td>
                        <td>@Html.DisplayFor(model => model.Jogo.Nome)</td>
                        <td>@Html.DisplayFor(model => model.Jogo.Preco)€</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    @*<div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Métodos de Pagamento:</p>
                <img src="~/admin-lte/img/credit/paypal2.png" />
            </div>
            <!-- /.col -->
            <div class="col-xs-6">
                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Total:</th>
                                <td>@Html.DisplayFor(model => model.Jogo.Preco)€</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>*@
    <!-- /.row -->
    <!-- this row will not appear when printing -->
    <div class="row no-print">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <br />
                <div class="form-actions no-color">
                    <a onclick="print()" class="btn btn-default pull-left"><i class="fa fa-print"></i> Imprimir</a>

                    @*<input type="submit" value="Comprar" class="btn btn-success pull-right" />*@
                </div>

            }
            @*<button class="btn btn-default fa fa-print pull-right" type="button" onclick="print()"></button>*@
        </div>
    </div>
</section>
<!-- /.content -->
<div class="clearfix"></div>

