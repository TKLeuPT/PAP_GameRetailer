@model IEnumerable<GameRetailer.Models.Compra>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Armazem.CodPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jogo.Criadora)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderByDescending(x=>x.NumCompra)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Armazem.CodPostal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jogo.Criadora)
        </td>
        <td>
            @Html.ActionLink("Recibo", "Recibo", new { id = item.NumCompra })|
            @Html.ActionLink("Editar", "Edit", new { id = item.NumCompra }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.NumCompra }) |
            @Html.ActionLink("Apagar", "Delete", new { id = item.NumCompra })

        </td>
    </tr>
}

</table>
