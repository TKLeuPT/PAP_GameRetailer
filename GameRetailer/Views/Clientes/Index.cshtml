@model IEnumerable<GameRetailer.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<h4>Clientes</h4>
<hr />
<div class="box box-info">
    <div class="box-header">
        @*<h3 class="box-title">Clientes</h3>*@
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
                <div class="col-sm-12">
                    <table id="datatable" class="table table-striped table-bordered" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NumCliente)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NIF)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telemovel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Localidade)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CodPostal)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NIF)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telemovel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Localidade)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodPostal)
                                    </td>
                                    <td>
                                        <button class="btn btn-default fa fa-pencil" type="button" onclick="location.href='@Url.Action("Edit", new { id = item.NumCliente })'"></button>
                                        @*<button class="btn btn-default fa fa-list" type="button" onclick="location.href='@Url.Action("Details", new { id = item.NumCliente })'"></button>*@
                                        <button class="btn btn-default fa fa-close" type="button" onclick="location.href='@Url.Action("Delete", new { id = item.NumCliente })'"></button>

                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.NumCliente }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.NumCliente }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.NumCliente })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable({
                "bJQueryUI": false,
                "bAutoWidth": false,
                "oLanguage": {
                    "sProcessing": "A processar...",
                    "sLengthMenu": "Mostrar _MENU_ registos",
                    "sZeroRecords": "Não foram encontrados resultados",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registos",
                    "sInfoEmpty": "Mostrando de 0 até 0 de 0 registos",
                    "sInfoFiltered": "(filtrado de _MAX_ registos no total)",
                    "sInfoPostFix": "",
                    "sSearch": "Procurar:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Seguinte",
                        "sLast": "Último"
                    }
                }
            });
        });
    </script>
}
